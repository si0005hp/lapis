{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "outDir": "./dist", // serverからclientに依存しない限り、ビルド結果の階層はこれでOK
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./src/**/*"
  ]
}